<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_aotSuffix Condition="'$(TargetGroup)' == 'uapaot'">-aot</_aotSuffix>
    <_targetOSVersionIndex>$(TargetOS.IndexOfAny(".-0123456789"))</_targetOSVersionIndex>
    <_targetOSFamily Condition="'$(_targetOSVersionIndex)' != '-1'">$(TargetOS.SubString(0, $(_targetOSVersionIndex)))</_targetOSFamily>
  </PropertyGroup>
  
  <Choose>
    <When Condition="'$(PackageRID)' != ''" />
    <When Condition="'$(_targetOSFamily)' == 'win'">
      <PropertyGroup>
        <PackageRID>win10-$(ArchGroup)$(_aotSuffix)</PackageRID>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <PackageRID>$(TargetRid)-$(ArchGroup)</PackageRID>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <OfficialBuildRID Include="win10-x86">
      <Platform>x86</Platform>
    </OfficialBuildRID>
    <OfficialBuildRID Include="win10-x64" />
    <OfficialBuildRID Include="win10-arm">
      <Platform>arm</Platform>
    </OfficialBuildRID>
    <OfficialBuildRID Include="win10-x86-aot">
      <Platform>x86</Platform>
    </OfficialBuildRID>
    <OfficialBuildRID Include="win10-x64-aot" />
    <OfficialBuildRID Include="win10-arm-aot">
      <Platform>arm</Platform>
    </OfficialBuildRID>
  </ItemGroup>
</Project>