<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- shared configurations between shims and apicompat -->
    <BuildConfigurations>
      $(BuildConfigurations);
      netcoreapp;
      uap;
    </BuildConfigurations>
  </PropertyGroup>

  <Import Project="..\Directory.Build.props" />

  <Import Project="netfxreference.props" />

  <PropertyGroup>
    <IsNETCoreApp>true</IsNETCoreApp>
    <IsUAP>true</IsUAP>
  </PropertyGroup>

  <PropertyGroup>
    <!-- shared folder for ApiCompat.proj and shims.proj -->
    <GenFacadesOutputPath>$(RootIntermediateOutputPath)shims/$(TargetGroup)/</GenFacadesOutputPath>
  </PropertyGroup>
</Project>
