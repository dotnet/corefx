<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- shared configurations between shims and apicompat -->
    <BuildConfigurations>
      $(BuildConfigurations);
      netcoreapp;
      uap;
    </BuildConfigurations>
  </PropertyGroup>

  <Import Project="..\dir.props" />

  <Import Project="netfxreference.props" />

  <PropertyGroup>
    <IsNETCoreApp>true</IsNETCoreApp>
    <IsUAP>true</IsUAP>
    <!-- Though we build as windows specific we ship these in the package as RID-less so that we don't have to cross-compile the compat pack shims and move it up the stack -->
    <PackageTargetRuntime/>
  </PropertyGroup>

  <PropertyGroup>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)shims/$(TargetGroup)/</IntermediateOutputPath>
    <GenFacadesOutputPath>$(BaseIntermediateOutputPath)shims/$(TargetGroup)/facades/</GenFacadesOutputPath>
  </PropertyGroup>
</Project>