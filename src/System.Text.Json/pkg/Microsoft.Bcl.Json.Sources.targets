<Project>
  <ItemGroup Condition="'$(ExcludeEmbeddedResourceFromPackage)' != 'true'">
    <_embeddedResourceFiles Include="$(MSBuildThisFileDirectory)*.resx" />
    <EmbeddedResource Include="@(_embeddedResourceFiles -> '%(FullPath)')">
      <ManifestResourceName>$([System.String]::Copy('%(FileName)').Replace('.neutral',''))</ManifestResourceName>
      <GenerateSource>true</GenerateSource>
    </EmbeddedResource>
  </ItemGroup>
</Project>
