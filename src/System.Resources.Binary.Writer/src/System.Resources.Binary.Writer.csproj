<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>System.Resources.Binary.Writer</AssemblyName>
    <RootNamespace>System.Resources.Binary</RootNamespace>
    <Configurations>netstandard-Debug;netstandard-Release;netcoreapp-Debug;netcoreapp-Release;uap-Debug;uap-Release</Configurations>
    <NoWarn>$(NoWarn);436</NoWarn>
    <ResourceWriterPath>$([MSBuild]::NormalizeDirectory('$(SourceDir)', 'System.Resources.Writer', 'src'))</ResourceWriterPath>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetsNETStandard)' == 'true'">
    <Compile Include="$(ResourceWriterPath)System\Resources\ResourceWriter.cs" Link="System\Resources\ResourceWriter.cs" />
    <Compile Include="$(ResourceWriterPath)System\Resources\__FastResourceComparer.cs" Link="System\Resources\__FastResourceComparer.cs" />
    <Compile Include="$(ResourceWriterPath)System\Runtime\Versioning\MultitargetingHelpers.cs" Link="System\Runtime\Versioning\MultitargetingHelpers.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="System\Resources\Binary\BinaryResourceWriter.cs" />
    <Compile Include="BinaryWriterExtensions.cs" />
    <Compile Include="$(CommonPath)\System\Resources\Binary\SerializationFormat.cs" Link="System\Resources\Binary\SerializationFormat.cs" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Collections" />
    <Reference Include="System.Diagnostics.Debug" />
    <Reference Include="System.Diagnostics.Tools" />
    <Reference Include="System.Resources.Binary.Reader" />
    <Reference Include="System.Resources.ResourceManager" />
    <Reference Include="System.Resources.Writer" />
    <Reference Include="System.Runtime" />
    <Reference Include="System.Runtime.Extensions" />
  </ItemGroup>
</Project>