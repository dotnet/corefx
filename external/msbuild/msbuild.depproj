<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- place the references only, runtime implementation will be supplied by hosting MSBuild -->
    <BinPlaceRef>true</BinPlaceRef>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="$(MicrosoftBuildUtilitiesCorePackageVersion)" />
    <PackageReference Include="Microsoft.Build.Framework" Version="$(MicrosoftBuildFrameworkPackageVersion)" />

     <!-- only include directly referenced packages, not dependencies (which we build locally in this repository) -->
    <PackageToInclude Include="@(PackageReference)" />
  </ItemGroup>
</Project>